{
  "name": "bento-box",
  "version": "1.0.0",
  "description": "Sistema de Gestão de Cardápio Digital com Grid Dinâmico",
  "author": "Math5oul",
  "license": "PROPRIETARY",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Math5oul/bento-box"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:backend": "tsc --project tsconfig.backend.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:bento-box": "node dist/bento-box/server/server.mjs",
    "backend": "ts-node-dev --project tsconfig.backend.json backend/server.ts",
    "seed:products": "ts-node --project tsconfig.backend.json backend/scripts/seed-products.ts",
    "dev": "concurrently \"npm run backend\" \"ng serve\"",
    "dev:mobile": "concurrently \"npm run backend\" \"ng serve --host 0.0.0.0\"",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\" \"*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\" \"*.{js,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "^20.3.9",
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@angular/forms": "^20.3.9",
    "@angular/platform-browser": "^20.3.9",
    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/platform-server": "^20.3.9",
    "@angular/router": "^20.3.9",
    "@angular/ssr": "^20.1.5",
    "bcrypt": "^6.0.0",
    "bento-box": "file:",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "rxjs": "~7.8.0",
    "tmp": "^0.2.4",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.9",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.18.0",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.8.3"
  },
  "lint-staged": {
    "*.{ts,html,scss,css,json,js}": "prettier --write"
  }
}

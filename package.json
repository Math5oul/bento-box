{
  "name": "bento-box",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:bento-box": "node dist/bento-box/server/server.mjs",
    "backend": "node menu-server.js",
    "dev": "concurrently \"npm run backend\" \"ng serve\"",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\" \"*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\" \"*.{js,json}\"",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/platform-server": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@angular/ssr": "^20.1.5",
    "bento-box": "file:",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "rxjs": "~7.8.0",
    "tmp": "^0.2.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "lint-staged": {
    "*.{ts,html,scss,css,json,js}": "prettier --write"
  }
}

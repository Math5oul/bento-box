# ============================================
# BENTO BOX - CONFIGURAÇÃO DO RESTAURANTE
# ============================================
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE

# ============================================
# INFORMAÇÕES DO RESTAURANTE
# ============================================
RESTAURANT_NAME=Meu Restaurante
RESTAURANT_CNPJ=
RESTAURANT_PHONE=
RESTAURANT_EMAIL=contato@meurestaurante.com
RESTAURANT_ADDRESS=

# ============================================
# SERVIDOR
# ============================================
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:4200

# ============================================
# MONGODB
# ============================================
# Opção 1: MongoDB Local via Docker
MONGODB_URI=mongodb://mongodb:27017/bento-box

# Opção 2: MongoDB Local (instalado na máquina)
# MONGODB_URI=mongodb://localhost:27017/bento-box

# Opção 3: MongoDB Atlas (Cloud - Recomendado para backup automático)
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/bento-box?retryWrites=true&w=majority

# ============================================
# SEGURANÇA
# ============================================
# JWT Secret - MUDE PARA UMA STRING ALEATÓRIA LONGA E SEGURA
JWT_SECRET=MUDE-ESTA-STRING-PARA-ALGO-MUITO-SEGURO-E-ALEATORIO-MIN-32-CARACTERES
JWT_EXPIRES_IN=7d

# Session
SESSION_EXPIRY_HOURS=24

# ============================================
# QR CODE
# ============================================
# IP da máquina na rede local para acesso via celular
# Exemplo: http://192.168.1.100:4200
QR_CODE_BASE_URL=http://localhost:4200

# ============================================
# PAGAMENTOS ONLINE
# ============================================
# Gateway: mercado_pago, stripe, pagseguro, asaas, none
PAYMENT_PROVIDER=none
PAYMENT_ENABLED=false

# === Mercado Pago ===
# Obtenha em: https://www.mercadopago.com.br/developers/panel/credentials
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_SECRET=

# Métodos Habilitados
PAYMENT_PIX_ENABLED=false
PAYMENT_CREDIT_CARD_ENABLED=false
PAYMENT_DEBIT_CARD_ENABLED=false

# Webhook URL (deve ser acessível publicamente para receber notificações)
# Exemplo: http://seu-ip-publico:4200/api/payments/webhook
PAYMENT_WEBHOOK_URL=

# ============================================
# EMAIL (SMTP)
# ============================================
EMAIL_ENABLED=false

# Provedor SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Credenciais
# Gmail: Use "Senha de App" em https://myaccount.google.com/apppasswords
EMAIL_USER=
EMAIL_PASSWORD=

# Remetente (nome e email)
EMAIL_FROM=Meu Restaurante <noreply@meurestaurante.com>

# ============================================
# UPLOADS E STORAGE
# ============================================
UPLOAD_DIR=/app/uploads

# ============================================
# BACKUP
# ============================================
BACKUP_PATH=./backup
BACKUP_RETENTION_DAYS=7
BACKUP_AUTO_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *

# ============================================
# OUTROS
# ============================================
# Timezone
TZ=America/Sao_Paulo

# Logs
LOG_LEVEL=info

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. NUNCA commite o arquivo .env com credenciais reais
# 2. Mude JWT_SECRET para algo único e aleatório
# 3. Use MongoDB Atlas para backup automático na nuvem
# 4. Para pagamentos online, configure webhook com IP/domínio público
# 5. Para email com Gmail, use "Senha de App" (não a senha normal)

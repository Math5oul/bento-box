# Environment Variables

# MongoDB
# Para Docker (use 'mongodb' como hostname)
MONGODB_URI=mongodb://mongodb:27017/bento-box
# Para desenvolvimento local (use 'localhost')
# MONGODB_URI=mongodb://localhost:27017/bento-box
# Para MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bento-box

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server
PORT=3001
NODE_ENV=production

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost

# QR Code Base URL
QR_CODE_BASE_URL=http://localhost

# Session
SESSION_EXPIRY_HOURS=24

# Upload Directory (Docker)
UPLOAD_DIR=/app/uploads
